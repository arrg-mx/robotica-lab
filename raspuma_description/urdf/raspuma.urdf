<?xml version="1.0" encoding="utf-8"?>

<robot
  name="raspuma">

  <link name="basefoot_print" />

  <joint name="basefoot_print_to_base_link_joint" type="fixed">
    <parent link="basefoot_print"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
  </joint>
  
  <link name="base_link">
    <inertial>
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0 0" />
      <mass
        value="0.46603" />
      <inertia
        ixx="0.00051729"
        ixy="4.9118E-07"
        ixz="3.484E-08"
        iyy="0.00069099"
        iyz="-3.9114E-06"
        izz="0.00031881" />
    </inertial>
    <visual>
      <origin
        xyz="-0.27 0.013 0"
        rpy="0 0 1.57" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/base_link.STL" />
      </geometry>
      <material
        name="Blue">
        <color
          rgba="0 0 0.8 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/base_link.STL" />
      </geometry>
    </collision>
  </link>


  <link name="right_wheel">
    <inertial>
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0.0 0 0.0" />
      <mass
        value="0.012327" />
      <inertia
        ixx="3.5553E-06"
        ixy="-1.4437E-19"
        ixz="-9.4595E-19"
        iyy="3.5532E-06"
        iyz="-7.3105E-11"
        izz="6.9784E-06" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/right_wheel.STL" />
      </geometry>
      <material
        name="grey">
        <color
          rgba="0.25098 0.25098 0.25098 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/right_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="base_right_to_wheel_joint"
    type="continuous">
    <origin
      xyz="0.055 0.06 -0.03"
      rpy="-1.5708 0.0 0.0" />
    <parent
      link="base_link" />
    <child
      link="right_wheel" />
    <axis
      xyz="0 0 1" />
    <limit
      effort="0.08"
      velocity="18" />
  </joint>

  <link name="left_wheel">
    <inertial>
      <origin
        xyz="0.0 0.0 0.0"
        rpy="0 0 0" />
      <mass
        value="0.012327" />
      <inertia
        ixx="3.5552E-06"
        ixy="-3.7977E-10"
        ixz="-1.3221E-11"
        iyy="3.5532E-06"
        iyz="-7.19E-11"
        izz="6.9784E-06" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/left_wheel.STL" />
      </geometry>
      <material
        name="grey">
        <color
          rgba="0.25098 0.25098 0.25098 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/left_wheel.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="base_left_to_wheel_joint"
    type="continuous">
    <origin
      xyz="0.055 -0.046 -0.03"
      rpy="-1.5708 0 0.0" />
    <parent
      link="base_link" />
    <child
      link="left_wheel" />
    <axis
      xyz="0 0 1" />
    <limit
      effort="0.08"
      velocity="18" />
  </joint>

  <link name="body_cam">
    <inertial>
      <origin
        xyz="0.0077589 -0.00011356 0.014985"
        rpy="0 0 0" />
      <mass
        value="0.015993" />
      <inertia
        ixx="1.8893E-06"
        ixy="-1.7136E-07"
        ixz="-3.8471E-07"
        iyy="2.2804E-06"
        iyz="-3.8442E-07"
        izz="2.667E-06" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/body_cam.STL" />
      </geometry>
      <material
        name="Blue_1">
        <color
          rgba="0 0 0.8 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/body_cam.STL" />
      </geometry>
    </collision>
  </link>


  <joint name="base_to_body_cam"
    type="revolute">
    <origin
      xyz="0.06  0.0 0.019"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="body_cam" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-1.57"
      upper="1.57"
      effort="0.176"
      velocity="0.166" />
  </joint>

  <link name="camera">
    <inertial>
      <origin
        xyz="0.0028256 0.00019085 0.0036585"
        rpy="0 0 0" />
      <mass
        value="0.011488" />
      <inertia
        ixx="9.9215E-07"
        ixy="2.2492E-08"
        ixz="-7.2374E-09"
        iyy="7.6855E-07"
        iyz="1.3763E-08"
        izz="4.5939E-07" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/camera.STL" />
      </geometry>
      <material
        name="green">
        <color
          rgba="0 0.75294 0 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://raspuma_description/meshes/camera.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="body_cam_to_camera"
    type="revolute">
    <origin
      xyz="0.022826 -0.00015 0.038482"
      rpy="0 0 0" />
    <parent
      link="body_cam" />
    <child
      link="camera" />
    <axis
      xyz="0 1 0" />
    <limit
      lower="-1.57"
      upper="1.57"
      effort="0.176"
      velocity="0.166" />
  </joint>

  <link name="mono_link">
  </link>

  <joint name="camera_to_mono_link" type="fixed">
    <parent
      link="camera" />
    <child
      link="mono_link" />
    <origin
      xyz="0.0 0.0 0.0"
      rpy="0 1.5708 0" />
  </joint>

  <!--Deficion de los eslabones en Gazebo-->

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1 value="0.1" />
    <mu2 value="0.1" />
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="body_cam">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="camera">
    <material>Gazebo/Blue</material>
  </gazebo>


  <!--Plug de robot diferencial-->

  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <!-- Update rate in Hz -->
      <update_rate>50</update_rate>
      <!-- wheels -->
      <left_joint>base_left_to_wheel_joint</left_joint>
      <right_joint>base_right_to_wheel_joint</right_joint>
      <!-- kinematics -->
      <wheel_separation>0.09</wheel_separation>
      <wheel_diameter>0.06</wheel_diameter>
      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>basefoot_print</robot_base_frame>
    </plugin>
  </gazebo> 
  

  <!--Plug del control de la camara-->

  <gazebo>
    <plugin name="joint_state_publisher_controller" filename="libgazebo_ros_joint_state_publisher.so">
      <!-- Update rate in Hertz -->
      <update_rate>10</update_rate>
      <!-- Name of joints in the model whose states will be published. -->
      <joint_name>base_to_body_cam</joint_name>
      <joint_name>body_cam_to_camera</joint_name>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin name="joint_pose_trajectory_controller" filename="libgazebo_ros_joint_pose_trajectory.so">
      <!-- Update rate in Hz -->
      <update_rate>2</update_rate>
    </plugin>
  </gazebo>

  <!--Camara-->

  <gazebo>
    <sensor name="camera_sensor" type="camera">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10.0</update_rate>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <frame_name>mono_link</frame_name>
        </plugin>
    </sensor>
  </gazebo>

  <!--Sensores ultrasonicos-->
  <link name="ultrasonic_1_link">
  </link>

  <link name="ultrasonic_2_link">
  </link>

  <link name="ultrasonic_3_link">
  </link>

  <joint name="base_to ultrasonic_1" type="fixed">
    <parent link="base_link" />
    <child link="ultrasonic_1_link" />
    <origin xyz="0.085 0 -0.025" rpy="0 0 0" />
  </joint>

  <joint name="base_to ultrasonic_2" type="fixed">
    <parent link="base_link" />
    <child link="ultrasonic_2_link" />
    <origin xyz="0.045 0.045 0.03" rpy="0 0 1.57" />
  </joint>

  <joint name="base_to ultrasonic_3" type="fixed">
    <parent link="base_link" />
    <child link="ultrasonic_3_link" />
    <origin xyz="0.045 -0.045 0.03" rpy="0 0 -1.57" />
  </joint>


  <gazebo>
    <sensor name="ultrasonic_1" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.12</min_angle>
            <max_angle>0.12</max_angle>
          </horizontal>
          <vertical>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.01</min_angle>
            <max_angle>0.01</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.02</min>
          <max>4</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="ultrasonic_sensor_1" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=ultrasonic_sensor_1</remapping>
        </ros>
        <output_type>sensor_msgs/Range</output_type>
        <radiation_type>ultrasound</radiation_type>
        <frame_name>ultrasonic_1_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <sensor name="ultrasonic_2" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.12</min_angle>
            <max_angle>0.12</max_angle>
          </horizontal>
          <vertical>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.01</min_angle>
            <max_angle>0.01</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.02</min>
          <max>4</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="ultrasonic_sensor_2" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=ultrasonic_sensor_2</remapping>
        </ros>
        <output_type>sensor_msgs/Range</output_type>
        <radiation_type>ultrasound</radiation_type>
        <frame_name>ultrasonic_2_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <sensor name="ultrasonic_3" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.12</min_angle>
            <max_angle>0.12</max_angle>
          </horizontal>
          <vertical>
            <samples>5</samples>
            <resolution>1.000000</resolution>
            <min_angle>-0.01</min_angle>
            <max_angle>0.01</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.02</min>
          <max>4</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="ultrasonic_sensor_3" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=ultrasonic_sensor_3</remapping>
        </ros>
        <output_type>sensor_msgs/Range</output_type>
        <radiation_type>ultrasound</radiation_type>
        <frame_name>ultrasonic_3_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>


</robot>